    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/graphql": "^10.1.3",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/throttler": "^3.1.0",
    "@prisma/client": "^4.7.1",
    "@sendgrid/mail": "^7.7.0",
    "@sentry/node": "^7.15.0",
    "@sentry/tracing": "^7.15.0",
    "apollo-server-express": "^3.10.2",
    "async-mutex": "^0.4.0",
    "bcrypt": "^5.1.0",
    "bignumber.js": "^9.1.0",
    "cache-manager": "^5.0.1",
    "class-validator": "^0.13.2",
    "ethers": "^5.7.2",
    "google-auth-library": "^8.7.0",
    "graphql": "^16.6.0",
    "joi": "^17.6.3",
    "nanoid": "^3.3.1",
    "nestjs-log": "^2.0.6",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "password-validator": "^5.3.0",
    "prisma": "^4.7.1",
    "prisma-graphql-type-decimal": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.0.2",
    "@types/node": "^16.0.0",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "class-transformer": "^0.5.1",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.2",
    "jest": "^27.2.5",
    "lint-staged": "^13.0.3",
    "prettier": "^2.3.2",
    "prisma-nestjs-graphql": "^17.0.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@libs/helper(|/.*)$": "<rootDir>/libs/helper/src/$1",
      "^@libs/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1"
    }
  }
}
